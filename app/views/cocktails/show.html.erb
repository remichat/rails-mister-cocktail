<div class="d-flex justify-content-between" >
  <div class="d-flex cocktail-desc">
    <div class="cover" style="background-image: url(<%= cl_image_path @cocktail.photo.key, width: 300 , crop: :fill%>);"></div>
    <div class="">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete do %> <i class="far fa-trash-alt"></i> <% end %> </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="add-ingredient">
    <h2>Add a new ingredient</h2>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Add ingredient", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

